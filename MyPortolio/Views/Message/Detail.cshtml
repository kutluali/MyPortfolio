@model Message

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mesajlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Gelen Mesaj Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            <input type="hidden"  asp-for="MessageId" />
                            Gönderen :<b style="accent-color"> @Model.NameSurname</b>  <br />
                            Email : <b>@Model.Email</b> <br />
                            Tarih : <b>@Model.SendDate </b> 
                            <br /><br />
                            Mesaj: <b>@Model.MessageDetail</b>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


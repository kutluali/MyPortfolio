@model Contact

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilginizlerinizin Tamamını Silmek İstiyor Musunuz ?</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <form asp-controller="Contact" asp-action="Delete" method="post">
                            <input type="hidden" asp-for="@Model.ContactId">
                            <div class="col-md-7 offset">

                                <div class="form-group">
                                    <label for="largeInput">Sayfa İsmi</label>
                                    <input type="text" asp-for="Title" class="form-control" id="disableinput" disabled>
                                </div>

                                <div class="form-group">
                                    <label for="largeInput">Link</label>
                                    <input type="text" asp-for="Description" class="form-control" id="disableinput" disabled>
                                </div>

                                <br />
                                <button type="submit" class="btn btn-danger">Sil</button>
                                <a href="~/Contact/Index" type="button" class="btn btn-success" data-dismiss="modal">İptal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



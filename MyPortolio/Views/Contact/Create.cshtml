@model Contact
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim</h4>
		<div class="row">
			<div class="col-md-9">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Bilgileri Ekleme Sayfası</div><br />
					</div>
					<div class="card-body">

						<form method="post">
							<label> Başlık </label>
							<input type="text" asp-for="Title" class="form-control" /> <br />

							<label> Açıklama </label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea> <br />
							
							<label> Telefon </label>
							<input type="text" asp-for="Phone1" class="form-control" /> <br />

							<label> 2. Telefon </label>
							<input type="text" asp-for="Phone2" class="form-control" /> <br />

							<label> Mail</label>
							<input type="text" asp-for="Email1" class="form-control" /> <br />

							<label> 2. Mail </label>
							<input type="text" asp-for="Email2" class="form-control" /> <br />

							<label> Adres Bilgisi </label>
							<input type="text" asp-for="Address" class="form-control" /> <br />

							<button type="submit" class="btn btn-success">İletişim Bilgilerini Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


@model Contact
@{
	ViewData["Title"] = "Update";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim</h4>
		<div class="row">
			<div class="col-md-9">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Bilgileri Güncelleme Sayfası</div><br />
					</div>
					<div class="card-body">

						<form method="post">
							<label> Sayfa Adı </label>
							<input type="text" asp-for="Title" class="form-control" /> <br />

							<label> Link Bilgisi </label>
							<input type="text" asp-for="Description" class="form-control" /> <br />

							<label> Link Bilgisi </label>
							<input type="text" asp-for="Phone1" class="form-control" /> <br />

							<label> Link Bilgisi </label>
							<input type="text" asp-for="Phone2" class="form-control" /> <br />

							<label> Link Bilgisi </label>
							<input type="text" asp-for="Email1" class="form-control" /> <br />

							<label> Link Bilgisi </label>
							<input type="text" asp-for="Email2" class="form-control" /> <br />

							<label> Link Bilgisi </label>
							<input type="text" asp-for="Address" class="form-control" /> <br />

							<button type="submit" class="btn btn-warning">İletişim Bilgilerini Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>




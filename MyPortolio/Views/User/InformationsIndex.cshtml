@model List<User>
@{
    ViewData["Title"] = "InformationsIndex";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bilgiler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kişisel Bilgiler</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Kişisel Bilgileri Aşağıdan Listeyebilir Ekleyebilirsiniz...
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Rolü</th>
                                    <th scope="col">Adı Soyadı</th>
                                    <th scope="col">Mail Adresi</th>
                                    <th scope="col">Cv Dosyası</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserId</td>
                                        <td>@item.Name</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>@item.Cv</td>
                                        <td><a href="~/User/InformationsDelete/@item.UserId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="~/User/InformationsUpdate/@item.UserId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="~/About/Create/" class="btn btn-primary">Admin Oluştur.</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


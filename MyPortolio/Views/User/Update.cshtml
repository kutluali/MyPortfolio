@model User

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Admin</h4>
		<div class="row">
			<div class="col-md-9">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kullanıcı Bilgilerini Güncelleme Sayfası</div><br />
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="@Model.UserId" />
							<label> Kullanıcı Rolü </label>
							<input type="text" asp-for="Name" class="form-control" /> <br />

							<label> Adı Soyadı </label>
							<input type="text"  asp-for="UserName" class="form-control"></input> <br />

							<label> Mail Adresi </label>
							<input type="mail" asp-for="Email" class="form-control" /> <br />

							<label> Parola </label>
							<input type="password" asp-for="Password" class="form-control" /> <br />

							<label> Yeni Parola </label>
							<input type="password" id="newPassword" name="NewPassword" class="form-control" /> <br />

							<button type="submit" class="btn btn-success">Kullanıcı Bilgilerini Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referenslar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referans İçerikleri</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Referans Bilgileriniz Listeleyip Oluşturabilirsiniz...
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">İsim Soyisim </th>
                                    <th scope="col">Şirketeki Adı && Ünvanı</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Resmi && Avatar</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TestimonialId</td>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="~/Testimonial/Delete/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="~/Testimonial/Update/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="~/Testimonial/Create/" class="btn btn-primary">Referans Bilgisi Oluştur.</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


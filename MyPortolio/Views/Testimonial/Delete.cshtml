@model Testimonial
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans Bilginizi Silmek İstediğinize Emin Misiniz ?</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <form asp-controller="Testimonial" asp-action="Delete" method="post">
                            <input type="hidden" asp-for="@Model.TestimonialId">
                            <div class="col-md-7 offset">

                                <div class="form-group">
                                    <label for="largeInput">Başlık</label>
                                    <input type="text" asp-for="NameSurname" class="form-control" id="disableinput" disabled>
                                </div>

                                <div class="form-group">
                                    <label for="largeInput">Link</label>
                                    <input type="text" asp-for="Description" class="form-control" id="disableinput" disabled>
                                </div>

                                <div class="form-group">
                                    <label for="largeInput">Resim</label>
                                    <input type="text" asp-for="ImageUrl" alt="" style="width: 350px;" class="form-control" id="disableinput" disabled>
                                </div>

                                <br />
                                <button type="submit" class="btn btn-danger">Sil</button>
                                <a href="~/Testimonial/Index" type="button" class="btn btn-success" data-dismiss="modal">İptal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


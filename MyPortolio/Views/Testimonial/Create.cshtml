@model Testimonial
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans</h4>
		<div class="row">
			<div class="col-md-9">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Bilgisi Ekleme Sayfası</div><br />
					</div>
					<div class="card-body">

						<form method="post" enctype="multipart/form-data">
							<label> İsim Soyisim </label>
							<input type="text" asp-for="NameSurname" class="form-control" /> <br />

							<label> Şirketeki Adı && Ünvanı </label>
							<input type="text" asp-for="Title" class="form-control" /> <br />

							<label> Açıklama </label>
							<textarea type="text" asp-for="Description" class="form-control"></textarea> <br />
							
							<label> Resmi && Avatar </label>
							<input type="file" name="file" asp-for="ImageUrl" class="form-control" /> <br />

							<button type="submit" class="btn btn-primary">Referans Bilgisi Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


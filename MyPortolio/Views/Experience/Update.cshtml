@model Experience
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Deneyim Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" value="@Model.ExperienceId" />
							<label> Firma Bilgisi</label>
							<input type="text" asp-for="Head" class="form-control" /> <br />

							<label> Çalışılan İş Pozisyonu</label>
							<input type="text" asp-for="Title" class="form-control" /> <br />

							<label> Tarih Bilgisi</label>
							<input type="text" asp-for="Date" class="form-control" /> <br />

							<label> Açıklama Bilgisi</label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea> <br />

							<button type="submit" class="btn btn-primary">Deneyimi Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

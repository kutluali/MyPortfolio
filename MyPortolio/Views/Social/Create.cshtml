@model SocialMedia
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya</h4>
		<div class="row">
			<div class="col-md-9">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Bilgisi Ekleme Sayfası</div><br />
						<div class="card-title"><b>Sayfa Adı Örnek: </b>"facebook" , "instagram" gibi... </div><br />
					</div>
					<div class="card-body">

						<form method="post">
							<label> Sayfa Adı </label>
							<input type="text" asp-for="Title" class="form-control" /> <br />

							<label> Link Bilgisi </label>
							<input type="text" asp-for="Url" class="form-control" /> <br />

							<label> Sayfa adı </label>
							<input type="text" asp-for="Icon" class="form-control" /> <br />

							<button type="submit" class="btn btn-primary">Sosyal Medya Bilgisi Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


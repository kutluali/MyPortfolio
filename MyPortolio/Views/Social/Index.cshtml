@model List<SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Hesaplar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Hesap İçerikleri</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal Medya Bilgileriniz Listeleyip Oluşturabilirsiniz...
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Sayfa Adı</th>
                                    <th scope="col">Kısa Açıklama</th>
                                    <th scope="col">Detaylı Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SocialMediaId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Url</td>
                                        <td>@item.Icon</td>
                                        <td><a href="~/Social/Delete/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="~/Social/Update/@item.SocialMediaId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="~/Social/Create/" class="btn btn-primary">Sosyal Medya Alanı Oluştur.</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

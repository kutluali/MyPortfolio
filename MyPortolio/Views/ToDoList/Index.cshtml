@model List<ToDoList>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacaklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacaklar Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yapılacaklar İle İlgili İşlemleri Aşağıdan Yapabalirsiniz...
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">İçerik</th>
                                    <th scope="col">Ünvan</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Date</td>
                                        @if (item.Status==true)
                                        {
                                            <td><a href="/ToDoList/ChangeToDoListStatusToFalse/@item.ToDoListId" class="btn btn-dark">Yapılmadı Olarak İşaretle</a></td>
                                        }
                                        else
                                        {
                                        <td><a href="/ToDoList/ChangeToDoListStatusToTrue/@item.ToDoListId" class="btn btn-info">Yapıldı OLarak İşaretle</a></td>
                                        }
                                        <td><a href="~/ToDoList/Delete/@item.ToDoListId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="~/ToDoList/Update/@item.ToDoListId" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="~/ToDoList/Create" class="btn btn-primary">Yeni Yapılacak İşlem Oluştur.</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


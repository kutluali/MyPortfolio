@model ToDoList
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <form asp-controller="Experience" asp-action="Delete" method="post">
                            <input type="hidden" asp-for="@Model.ToDoListId">
                            <div class="col-md-7 offset">
                                <div class="form-group">
                                    <label for="largeInput">Şirket Adı</label>
                                    <input type="text" name="ProductName" value="@Model.Title" class="form-control" id="disableinput" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="largeInput">Pozisyon</label>
                                    <input type="text" name="ProductName" value="@Model.Date" class="form-control" id="disableinput" disabled>
                                </div>
                                <br />
                                <button type="submit" class="btn btn-danger">Sil</button>
                                <a href="~/ToDoList/Index" type="button" class="btn btn-success" data-dismiss="modal">İptal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



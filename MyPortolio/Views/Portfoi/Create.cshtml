@model Portfolio
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolyo</h4>
		<div class="row">
			<div class="col-md-9">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Portfolyo Bilgisi Ekleme Sayfası</div><br />
					</div>
					<div class="card-body">

						<form method="post" enctype="multipart/form-data">
							<label> Proje Adı </label>
							<input type="text" asp-for="Title" class="form-control" /> <br />

							<label> Kısa Proje Açıklaması </label>
							<input type="text" asp-for="SubTitle" class="form-control" /> <br />

							<label> Açıklama </label>
							<input type="text" asp-for="Description" class="form-control" /> <br />

							<label> Fotoğraf </label>
							<input type="file" name="file" asp-for="ImageUrl" class="form-control" /> <br />

							<label> Proje Linki </label>
							<input type="text" asp-for="Url" class="form-control" /> <br />

							<button type="submit" class="btn btn-primary">Portfolyo Bilgisi Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


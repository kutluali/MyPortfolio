@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Portfolyo</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Portfolyo İçerikleri</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Portfolyo Bilgileriniz Listeleyip Oluşturabilirsiniz...
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Kısa Açıklama</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Link</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PortfolioId</td>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>@item.ImageUrl</td>
                                        <td>@item.Url</td>
                                        <td><a href="~/Portfoi/Delete/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="~/Portfoi/Update/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="~/Portfoi/Create/" class="btn btn-primary">Portfolyo Bilgisi Oluştur.</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


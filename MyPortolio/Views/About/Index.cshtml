@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımda İçerikleri</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Hakkımda İle İlgili 1 Adet İçerik Aşağıdan Ekleyiniz...
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Kısa Açıklama</th>
                                    <th scope="col">Detaylı Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AboutId</td>
                                        <td>@item.Title</td>
                                        <td>@item.SubDescription</td>
                                        <td>@item.Details</td>
                                        <td><a href="~/About/Delete/@item.AboutId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="~/About/Update/@item.AboutId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="~/About/Create/" class="btn btn-primary">Hakkımda Alanı Oluştur.</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


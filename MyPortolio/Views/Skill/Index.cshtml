@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yetenekler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yetenek Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yeteneklerinizn Hepsini Ekleyebilirisiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Yetenek Alanınız</th>
                                    <th scope="col">% Türünden Değer</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SkillId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Value</td>
                                        <td><a href="~/Skill/Delete/@item.SkillId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="~/Skill/Update/@item.SkillId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="~/Skill/Create/" class="btn btn-primary">Yetenek Bilgisi Oluştur.</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



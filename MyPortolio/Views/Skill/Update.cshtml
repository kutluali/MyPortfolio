@model Skill
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenek</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenekleri Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="@Model.SkillId" />
							<label> Yetenek & Beceri</label>
							<input type="text" asp-for="Title" class="form-control" /> <br />

							<label> Yetenek & Beceri Bilgi % Yüzdesi </label>
							<input type="text" asp-for="Value" class="form-control" /> <br />

							<button type="submit" class="btn btn-primary">Yetenek Bilgisi Oluştur</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

